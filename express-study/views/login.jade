extends layout

block content
	form#register-form(action="/login" method="post")
		.forum-group
			label(for="username") 
				| Usename
				span *
			input(type="text", name="username", value="#{data.username}")
		.forum-group
			label(for="password") 
				| Password
				span *
			input(type="password", name="password", value="")
		.submit-button
			input(type="submit", name="submit", value="Login")
		if errors
			each error in errors
				li= error.msg
